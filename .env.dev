# Development environment settings for Organisize
# This file is used with docker-compose for local development

# Django Debug Mode
DEBUG=True

# Email configuration for MailHog
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=Organisize <noreply@organisize.dev>

# Database (using SQLite for development)
# No database config needed - Django will use default SQLite

# Security (for development only)
SECRET_KEY=django-insecure-dev-key-only-for-docker-development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0